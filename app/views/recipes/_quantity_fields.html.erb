<div class="nested-fields form-group">
<%= f.label :amount, "Ingredient Amount:" %>
<%= f.text_field :amount, class: "form-control" %> <br> <br>

<%= f.fields_for :ingredient do |quantity_ingredient| %>
  <%= quantity_ingredient.label :name, "Ingredient Name:" %>
  <%= quantity_ingredient.text_field :name, class: "form-control" %>
<% end %> <br>

<%= link_to_remove_association "Remove Ingredient", f %>
</div>
