<% @recipes.each do |r| %>
  <div class="row">
    <div class="col-xs-1 col-md-4 col-lg-3">
      <h4 class="text-center"><%= r.name %></h4> <br>
      <p><%= r.ingredients.count + " " + pluralize(r.ingredients.count, "ingredient") %></p>
    </div>
  </div>
<% end %>

