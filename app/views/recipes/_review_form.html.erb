<h4>Review this Recipe!</h4>
<%= form_for([@recipe, @review]) do |f| %>
  <%= f.hidden_field :recipe_id, value: @recipe.id %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.label :title %>
  <%= f.text_field :title %> <br>
  <%= f.label :content %>
  <%= f.text_area :content  %> <br>
  <%= f.submit %>
<% end %>